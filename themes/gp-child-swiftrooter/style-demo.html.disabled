<!DOCTYPE html>
<html lang="en" data-style="precision-pro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Style Variants Demo - Moving Company</title>
    <link rel="stylesheet" href="assets/css/themes.css">
    <link rel="stylesheet" href="assets/css/presentation-variants.css">
    <link rel="stylesheet" href="assets/css/presentation-utilities.css">
    <style>
        body {
            font-family: system-ui, -apple-system, sans-serif;
            margin: 0;
            padding: 2rem;
            transition: background-color 0.3s ease, color 0.3s ease;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
        }
        
        .style-controls {
            position: fixed;
            top: 1rem;
            right: 1rem;
            background: var(--color-surface);
            border: 1px solid var(--color-border);
            border-radius: 0.5rem;
            padding: 1rem;
            box-shadow: var(--elev-2);
            z-index: 1000;
            min-width: 200px;
        }
        
        .style-controls h3 {
            margin: 0 0 1rem 0;
            font-size: 1rem;
        }
        
        .style-controls select,
        .style-controls button {
            width: 100%;
            margin-bottom: 0.5rem;
            padding: 0.5rem;
            border: 1px solid var(--color-border);
            border-radius: 0.25rem;
            background: var(--color-surface);
            color: var(--color-text);
        }
        
        .style-controls button {
            background: var(--color-primary-500);
            color: var(--color-text-inverse);
            border: none;
            cursor: pointer;
        }
        
        .style-controls button:hover {
            background: var(--color-primary-600);
        }
        
        .demo-section {
            margin-bottom: 3rem;
            padding: 2rem;
            background: var(--color-surface);
            border: 1px solid var(--color-border);
            border-radius: 0.5rem;
            box-shadow: var(--elev-1);
        }
        
        .demo-section h2 {
            margin-top: 0;
            color: var(--color-text);
        }
        
        .demo-section p {
            color: var(--color-text-muted);
            margin-bottom: 1.5rem;
        }
        
        .button-group {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
            margin: 1rem 0;
        }
        
        .btn {
            padding: 0.75rem 1.5rem;
            border-radius: 0.375rem;
            border: 1px solid transparent;
            font-weight: 600;
            text-decoration: none;
            display: inline-block;
            transition: all 0.2s ease;
            cursor: pointer;
        }
        
        .btn-primary {
            background: var(--color-primary-500);
            color: var(--color-text-inverse);
            border-color: var(--color-primary-500);
        }
        
        .btn-primary:hover {
            background: var(--color-primary-600);
            border-color: var(--color-primary-600);
        }
        
        .btn-secondary {
            background: var(--color-accent-500);
            color: var(--color-text-inverse);
            border-color: var(--color-accent-500);
        }
        
        .btn-secondary:hover {
            background: var(--color-accent-600);
            border-color: var(--color-accent-600);
        }
        
        .btn-ghost {
            background: transparent;
            color: var(--color-primary-500);
            border-color: var(--color-primary-500);
        }
        
        .btn-ghost:hover {
            background: var(--color-primary-50);
            color: var(--color-primary-600);
        }
        
        .card-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 1.5rem;
            margin: 1rem 0;
        }
        
        .card {
            background: var(--color-surface-elevated);
            border: 1px solid var(--color-border);
            border-radius: 0.5rem;
            padding: 1.5rem;
            box-shadow: var(--elev-1);
            transition: all 0.2s ease;
        }
        
        .card:hover {
            box-shadow: var(--elev-2);
            transform: translateY(-2px);
        }
        
        .card h3 {
            margin-top: 0;
            color: var(--color-text);
        }
        
        .card p {
            color: var(--color-text-muted);
            margin-bottom: 1rem;
        }
        
        .form-group {
            margin-bottom: 1rem;
        }
        
        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
            color: var(--color-text);
            font-weight: 500;
        }
        
        .form-group input,
        .form-group select,
        .form-group textarea {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid var(--color-border);
            border-radius: 0.375rem;
            background: var(--color-surface);
            color: var(--color-text);
            font-size: 1rem;
        }
        
        .form-group input:focus,
        .form-group select:focus,
        .form-group textarea:focus {
            outline: none;
            border-color: var(--color-focus);
            box-shadow: var(--focus-ring);
        }
        
        .status-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            margin: 1rem 0;
        }
        
        .status {
            padding: 1rem;
            border-radius: 0.375rem;
            border: 1px solid;
        }
        
        .status-success {
            background: var(--color-success-bg);
            color: var(--color-success);
            border-color: var(--color-success);
        }
        
        .status-warning {
            background: var(--color-warning-bg);
            color: var(--color-warning);
            border-color: var(--color-warning);
        }
        
        .status-error {
            background: var(--color-error-bg);
            color: var(--color-error);
            border-color: var(--color-error);
        }
        
        .status-info {
            background: var(--color-info-bg);
            color: var(--color-info);
            border-color: var(--color-info);
        }
        
        .pricing-table {
            width: 100%;
            border-collapse: collapse;
            margin: 1rem 0;
        }
        
        .pricing-table th,
        .pricing-table td {
            padding: 1rem;
            text-align: left;
            border-bottom: 1px solid var(--color-border);
        }
        
        .pricing-table th {
            background: var(--color-surface);
            font-weight: 600;
            color: var(--color-text);
        }
        
        .pricing-table td {
            color: var(--color-text-muted);
        }
        
        .pricing-table tr:hover {
            background: var(--color-surface);
        }
        
        .price {
            font-weight: 600;
            color: var(--color-text);
        }
        
        .variant-info {
            background: var(--color-surface);
            border: 1px solid var(--color-border);
            border-radius: 0.5rem;
            padding: 1rem;
            margin-bottom: 2rem;
        }
        
        .variant-info h3 {
            margin-top: 0;
            color: var(--color-text);
        }
        
        .variant-info p {
            color: var(--color-text-muted);
            margin-bottom: 0;
        }
        
        @media (max-width: 768px) {
            .style-controls {
                position: static;
                margin-bottom: 2rem;
            }
            
            .button-group {
                flex-direction: column;
            }
            
            .btn {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Style Variants Demo</h1>
        <p>Experience all 5 presentation variants for the moving company website. Each variant offers a distinct visual approach while maintaining the same functionality.</p>
        
        <div class="style-controls">
            <h3>Style Controls</h3>
            <select data-style-select>
                <option value="precision-pro">Precision Pro</option>
                <option value="soft-industrial">Soft Industrial</option>
                <option value="card-ledger">Card Ledger</option>
                <option value="bold-stripe">Bold Stripe</option>
                <option value="airy-minimal">Airy Minimal</option>
            </select>
            <button data-random-style>Random Style</button>
            <button onclick="showToast('Style changed!', 'success')">Test Toast</button>
        </div>
        
        <div class="variant-info">
            <h3 id="variant-title">Precision Pro</h3>
            <p id="variant-description">Crisp, high-contrast design with operational clarity. Perfect for professional service pages and pricing tables.</p>
        </div>
        
        <div class="demo-section">
            <h2>Service Cards</h2>
            <p>Professional moving services with interactive hover effects and microinteractions.</p>
            <div class="card-grid">
                <div class="card" data-reveal>
                    <h3>Local Moving</h3>
                    <p>Professional moving services for your home and business. Licensed and insured crews available same-day.</p>
                    <button class="btn btn-primary">Get Estimate</button>
                </div>
                <div class="card" data-reveal>
                    <h3>Labor-Only Services</h3>
                    <p>You provide the truck or pod—we load, unload, and stage safely. Perfect for DIY moves.</p>
                    <button class="btn btn-secondary">Learn More</button>
                </div>
                <div class="card" data-reveal>
                    <h3>Furniture Delivery</h3>
                    <p>Store-to-home or room-to-room delivery with careful placement. We handle the heavy lifting.</p>
                    <button class="btn btn-ghost">Schedule Delivery</button>
                </div>
            </div>
        </div>
        
        <div class="demo-section">
            <h2>Pricing Table</h2>
            <p>Clear pricing structure with hover effects and professional presentation.</p>
            <table class="pricing-table">
                <thead>
                    <tr>
                        <th>Service</th>
                        <th>Duration</th>
                        <th>Price</th>
                        <th>Includes</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Local Moving</td>
                        <td>2-4 hours</td>
                        <td class="price">$150/hour</td>
                        <td>Loading, transport, unloading</td>
                    </tr>
                    <tr>
                        <td>Labor-Only</td>
                        <td>1-3 hours</td>
                        <td class="price">$120/hour</td>
                        <td>Loading/unloading only</td>
                    </tr>
                    <tr>
                        <td>Furniture Delivery</td>
                        <td>1-2 hours</td>
                        <td class="price">$100/hour</td>
                        <td>Delivery and placement</td>
                    </tr>
                </tbody>
            </table>
        </div>
        
        <div class="demo-section">
            <h2>Contact Form</h2>
            <p>Professional contact form with focus states and validation styling.</p>
            <form>
                <div class="form-group">
                    <label for="name">Full Name</label>
                    <input type="text" id="name" name="name" placeholder="Enter your full name">
                </div>
                <div class="form-group">
                    <label for="email">Email Address</label>
                    <input type="email" id="email" name="email" placeholder="Enter your email">
                </div>
                <div class="form-group">
                    <label for="phone">Phone Number</label>
                    <input type="tel" id="phone" name="phone" placeholder="Enter your phone number">
                </div>
                <div class="form-group">
                    <label for="service">Service Needed</label>
                    <select id="service" name="service">
                        <option value="">Select a service</option>
                        <option value="local-moving">Local Moving</option>
                        <option value="labor-only">Labor-Only Services</option>
                        <option value="furniture-delivery">Furniture Delivery</option>
                        <option value="packing">Packing Services</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="message">Additional Details</label>
                    <textarea id="message" name="message" rows="4" placeholder="Tell us about your moving needs"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Request Free Estimate</button>
            </form>
        </div>
        
        <div class="demo-section">
            <h2>Status Messages</h2>
            <p>Clear status indicators for different types of messages and alerts.</p>
            <div class="status-grid">
                <div class="status status-success">
                    <strong>Success!</strong><br>
                    Your estimate request has been submitted successfully.
                </div>
                <div class="status status-warning">
                    <strong>Warning</strong><br>
                    Please note that weekend moves may incur additional fees.
                </div>
                <div class="status status-error">
                    <strong>Error</strong><br>
                    There was a problem submitting your request. Please try again.
                </div>
                <div class="status status-info">
                    <strong>Info</strong><br>
                    Same-day service is available for most local moves.
                </div>
            </div>
        </div>
        
        <div class="demo-section">
            <h2>Typography & Links</h2>
            <p>Professional typography with interactive link states and microinteractions.</p>
            <h1>Heading 1 - Main Page Title</h1>
            <h2>Heading 2 - Section Headers</h2>
            <h3>Heading 3 - Subsection Headers</h3>
            <p>This is a paragraph with regular text. It demonstrates the body text color and readability across different style variants.</p>
            <p><small>This is small text used for captions, labels, and secondary information.</small></p>
            <p><a href="#">This is a link</a> that demonstrates the link color and hover states with microinteractions.</p>
            <p><a href="#">Another link</a> to show consistent styling across multiple links.</p>
        </div>
        
        <div class="demo-section">
            <h2>Microinteractions</h2>
            <p>Interactive elements with hover effects, focus states, and smooth transitions.</p>
            <div class="button-group">
                <button class="btn btn-primary">Primary Button</button>
                <button class="btn btn-secondary">Secondary Button</button>
                <button class="btn btn-ghost">Ghost Button</button>
            </div>
            <p>Hover over buttons and cards to see microinteractions in action. Each style variant has its own unique interaction patterns.</p>
        </div>
    </div>
    
    <script src="assets/js/style-switcher.js"></script>
    <script>
        // Variant descriptions
        const variantDescriptions = {
            'precision-pro': 'Crisp, high-contrast design with operational clarity. Perfect for professional service pages and pricing tables.',
            'soft-industrial': 'Robust, approachable design with safety cues. Ideal for service pages and safety information.',
            'card-ledger': 'Sectional clarity with focus on quotes and pricing. Great for pricing pages and service comparisons.',
            'bold-stripe': 'Brand-forward design with directional accents. Perfect for marketing pages and CTAs.',
            'airy-minimal': 'Calm, trustworthy design that\'s booking-friendly. Excellent for contact forms and booking pages.'
        };
        
        // Style controls
        const styleSelect = document.querySelector('[data-style-select]');
        const randomStyle = document.querySelector('[data-random-style]');
        const variantTitle = document.getElementById('variant-title');
        const variantDescription = document.getElementById('variant-description');
        
        // Set initial style
        const currentStyle = getStyleVariant();
        styleSelect.value = currentStyle;
        updateVariantInfo(currentStyle);
        
        // Style selection
        styleSelect.addEventListener('change', (e) => {
            setStyleVariant(e.target.value);
            updateVariantInfo(e.target.value);
        });
        
        // Random style
        randomStyle.addEventListener('click', () => {
            const variants = getAvailableVariants();
            const randomVariant = variants[Math.floor(Math.random() * variants.length)];
            setStyleVariant(randomVariant);
            styleSelect.value = randomVariant;
            updateVariantInfo(randomVariant);
        });
        
        // Update variant info
        function updateVariantInfo(variant) {
            variantTitle.textContent = variant.replace('-', ' ').replace(/\b\w/g, l => l.toUpperCase());
            variantDescription.textContent = variantDescriptions[variant];
        }
        
        // Toast function
        function showToast(message, type) {
            window.styleSwitcher.showToast(message, type);
        }
        
        // Listen for style changes
        document.addEventListener('stylechange', (e) => {
            console.log('Style changed:', e.detail);
            updateVariantInfo(e.detail.variant);
        });
        
        // Add custom microinteractions
        document.addEventListener('DOMContentLoaded', () => {
            // Add card peek effect to service cards
            document.querySelectorAll('.card').forEach(card => {
                window.styleSwitcher.addMicrointeraction(card, 'card-peek');
            });
            
            // Add button press effect to all buttons
            document.querySelectorAll('.btn').forEach(btn => {
                window.styleSwitcher.addMicrointeraction(btn, 'btn-press');
            });
            
            // Add link underlines to all links
            document.querySelectorAll('a').forEach(link => {
                window.styleSwitcher.addMicrointeraction(link, 'link-underline');
            });
        });
    </script>
</body>
</html>